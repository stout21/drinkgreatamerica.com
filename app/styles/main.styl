// {{{ banner

#banner
  height: 100vh
  position: relative
  overflow: hidden

.slide-text
  font-family: 'League Gothic', serif
  position: absolute
  top: 35%
  left: 5%
  z-index: 1

.slide-line-1,
.slide-line-2-1,
.slide-line-2-2
  background: rgba(255, 255, 255, 0.9)
  color: #000
  display: inline-block
  font-size: 6em
  margin: 0.0888em 0
  padding: 0 10px
  text-transform: uppercase

.slide-line-1
  font-size: 4em

.slide-image
  position: absolute
  top: 0
  height: 100%

.slide-line-2-2
  transform-origin: 50% 50% 57.5px
  transform-style: preserve-3d
  animation-duration: 6s
  animation-iteration-count: infinite
  animation-name: text-flip
  perspective: 1200
  position: absolute

.slide-line-2-2:nth-child(5)
  animation-delay: -4s
  transform: translateZ(115px) rotateX(90deg)

.slide-line-2-2:nth-child(6)
  animation-delay: -2s
  transform: translateZ(115px) rotateX(90deg)

@keyframes text-flip
  0%
    transform: translateZ(115px) rotateX(0deg)
  33.33%
    transform: translateZ(115px) rotateX(-90deg)
  33.44%
    transform: translateZ(115px) rotateX(90deg)
  66.66%
    transform: translateZ(115px) rotateX(90deg)
  100%
    transform: translateZ(115px) rotateX(0deg)

.slide-image
  animation-direction: alternate
  animation-duration: 6s
  animation-iteration-count: infinite
  animation-name: image-fade

.slide-image:nth-child(3)
  animation-delay: 2s
  opacity: 0

.slide-image:nth-child(4)
  animation-delay: 4s
  opacity: 0

@keyframes image-fade
  0%
    opacity: 1
  33.33%
    opacity: 0
  66.66%
    opacity: 0
  100%
    opacity: 1

