// {{{ navbar

.navbar
  position: fixed
  left: 0
  right: 0
  top: 0
  background: var(navbar-background)
  padding: 0.5em
  text-align: right
  vertical-align: middle
  z-index: 10

.navbar-item
  color: var(navbar-color)
  display: inline-block
  margin: 0.5em
  text-decoration: none
  text-transform: uppercase
  vertical-align: middle

.navbar-icon
  background: url(/images/sprite.png) no-repeat
  display: inline-block
  margin: 0.16666em
  height: 23px
  width: 23px
  vertical-align: middle

.navbar-icon-logo
  background-position: -4px 0
  float: left
  margin: -0.25em 0.25em 0
  width: 60px
  height: 44px

.navbar-icon-twitter
  background-position: -63px -13px

.navbar-icon-instagram
  background-position: -87px -13px

.navbar-icon-facebook
  background-position: -111px -13px

@media screen and (max-width: 425px)
  .navbar-item
    display: none

// navbar }}}
// {{{ banner

#banner
  height: 50em
  height: 100vh
  position: relative
  overflow: hidden

.slide-text
  font-family: var(display-font)
  margin: 0
  position: absolute
  top: 30%
  left: 5%
  z-index: 1

.slide-line-1,
.slide-line-2-1,
.slide-line-2-2
  background: rgba(255, 255, 255, 0.9)
  color: #000
  display: inline-block
  font-size: 6em
  margin: 0.0888em 0
  padding: 0 10px
  text-transform: uppercase

.slide-line-1
  font-size: 4em

.slide-image
  position: absolute
  top: 0
  min-height: 100%
  min-width: 100%

.slide-line-2-2
  transform-origin: 50% 50% 57.5px
  transform-style: preserve-3d
  animation-duration: 9s
  animation-iteration-count: infinite
  animation-name: text-flip
  animation-timing-function: var(banner-animation-function)
  perspective: 1200
  position: absolute

.slide-line-2-2:nth-child(5)
  animation-delay: -6s
  transform: translateZ(115px) rotateX(90deg)

.slide-line-2-2:nth-child(6)
  animation-delay: -3s
  transform: translateZ(115px) rotateX(90deg)

@keyframes text-flip
  0%
    background: var(banner-text-background)
    transform: translateZ(115px) rotateX(0deg)
  33.33%
    background: var(banner-text-roll-background)
    transform: translateZ(115px) rotateX(-90deg)
  33.44%
    background: var(banner-text-roll-background)
    transform: translateZ(115px) rotateX(90deg)
  66.66%
    background: var(banner-text-roll-background)
    transform: translateZ(115px) rotateX(90deg)
  100%
    background: var(banner-text-background)
    transform: translateZ(115px) rotateX(0deg)

.slide-image
  animation-direction: alternate
  animation-duration: 9s
  animation-iteration-count: infinite
  animation-name: image-fade
  animation-timing-function: var(banner-animation-function)

.slide-image:nth-child(3)
  animation-delay: -6s
  opacity: 0

.slide-image:nth-child(4)
  animation-delay: -3s
  opacity: 0

@keyframes image-fade
  0%
    opacity: 1
  33.33%
    opacity: 0
  66.66%
    opacity: 0
  100%
    opacity: 1

@media screen and (max-width: 500px)
  .slide-text
    left: -5%
    top: 20%
    transform: scale(0.5)

// banner }}}
// {{{ flavors

#flavors
  position: relative
  padding: 3em 5%

.flavors-background
  background: var(flavors-background)
  background-size: cover
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0

.tabs
  position: relative
  z-index: 1

.tab-contents
  background: var(banner-text-roll-background)
  padding: 0.75em 1.5em
  width: 50%

  h1, h2
    color: #000
    font-family: var(display-font)
    font-size: 3em
    text-transform: uppercase

@media screen and (min-width: 625px)
  .tab-link
    background: var(banner-text-roll-background)
    color: #000
    display: inline-block
    font-family: var(display-font)
    font-size: 3em
    margin-right: 0.16666em
    margin-bottom: 0.16666em
    padding: 0.16666em 0.3333em
    text-decoration: none
    text-transform: uppercase
    &.tab--is-active
      background: var(responsibility-background)
      color: #000

  .tab-contents
    opacity: 0
    position: absolute
    top: 5em
    transition: opacity 0.3s ease-in

  .tab--is-active
    .tab-contents
      opacity: 1

  .tab--is-inactive
    .product-image
      transform: scale(0.8)
      opacity: 0.5

  .product-image
    opacity: 0.9
    position: absolute
    top: 5%
    width: 22.5%
    transition: all 0.3s ease-in

  .product-apple-pie
    left: 57%
  .product-carolina-clear
    left: 79%

@media screen and (max-width: 873px)
  .tab-link
    font-size: 2em
  .tab-contents
    h1, h2
      font-size: 2em
  .tab-contents
    top: 3.5em

@media screen and (min-width: 501px)
  .tab-contents
    h1, h2
      border-bottom: 4px solid #000
      margin: 0 0.75em 0 -0.75em
      padding-left: 0.75em

@media screen and (min-width: 501px) and (max-width: 625px)
  .tab-link,
  .tab-intro
    display: none

  .product-image
    max-width: 40%

  .tab
    position: relative

  .tab-contents
    right: 0
    position: absolute
    top: 4.5em

@media screen and (max-width: 500px)
  .tab-link,
  .tab-intro,
  .flavors-background
    display: none

  #flavors
    background: #fff
    overflow: hidden
    padding: 0
    text-align: center

  .product-image
    margin: 1.5em auto
    max-width: 40%

  .tab-contents
    background: var(flavors-background) top right
    padding: 1.5em
    width: 100%
    h1, h2
      font-size: 3em
      margin: 0


