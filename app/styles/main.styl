// {{{ navbar

.navbar
  position: fixed
  left: 0
  right: 0
  top: 0
  background: var(navbar-background)
  padding: 0.5em
  text-align: right
  vertical-align: middle
  z-index: 10

.navbar-item
  color: var(navbar-color)
  display: inline-block
  margin: 0.5em
  text-decoration: none
  text-transform: uppercase
  vertical-align: middle

